    <div class="bookbody container">
        <div class="bodyLeft">
            <div class="bookpic">
                <img src=<%=picUrl %> >
            </div>
            <h2>《<%=bookname %>》</h2>
        </div>
        <div class="bodyRigth">
            <div class="bookname"><%=bookname %></div>
            <div class="content"><%=content %></div>
            <div class="author"><a href="javacripts:;"><%=author %></a> [著]</div>
            <div class="price"><span>书城价格</span><span>￥</span><span><%=bookprice %></span></div>
            <div class="classify"><span>购买规格</span><span><a href="javascript:;" class="classifyname">1本</a></span></div>
            <div class="num"><span>数量</span>
                <div class="upun">
                    <input type="text" value="1">
                    <a href="javascript:;" class="glyphicon glyphicon-chevron-up"></a>
                    <a href="javascript:;" class="glyphicon glyphicon-chevron-down"></a>
                </div>
            </div>
            <div><p><span>库存:</span><span><%=booknum %></span></p></div>
            <div class="toOrderCar">
                <button>加入购物车</button>
            </div>
